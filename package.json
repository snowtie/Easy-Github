                         "vaul":  "1.1.2"
                     },
    "devDependencies":  {
                            "@tailwindcss/vite":  "4.1.12",
                            "@types/react":  "^18.3.18",
                            "@types/react-dom":  "^18.3.5",
                            "@vitejs/plugin-react":  "4.7.0",
                            "electron":  "^30.5.1",
                            "electron-builder":  "^24.13.3",
                            "electron-vite":  "^2.3.0",
                            "tailwindcss":  "4.1.12",
                            "typescript":  "^5.6.3",
                            "vite":  "5.4.21"
                        },
    "peerDependencies":  {
                             "react":  "18.3.1",
                             "react-dom":  "18.3.1"
                         },
    "peerDependenciesMeta":  {
                                 "react":  {
                                               "optional":  true
                                           },
                                 "react-dom":  {
                                                   "optional":  true
                                               }
                             }
}

