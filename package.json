{
    "name":  "easygithub",
    "private":  true,
    "version":  "1.4.7",
    "description":  "Beginner-friendly GitHub manager and learning desktop app.",
    "author":  "EasyGithub",
    "type":  "module",
    "main":  "./dist/main/index.js",
    "scripts":  {
                    "dev":  "electron-vite dev",
                    "start":  "electron-vite preview",
                    "build":  "electron-vite build",
                    "dist":  "electron-vite build \u0026\u0026 electron-builder",
                    "dist:win":  "electron-vite build \u0026\u0026 electron-builder --win --x64",
                    "dist:mac":  "electron-vite build \u0026\u0026 electron-builder --mac",
                    "dist:linux":  "electron-vite build \u0026\u0026 electron-builder --linux"
                },
    "build":  {
                  "appId":  "com.easygithub.app",
    "productName":  "EasyGithub",
    "artifactName":  "${productName}-Setup-${version}.${ext}",
    "compression":  "store",

                  "directories":  {
                                      "output":  "release",
                                      "buildResources":  "build"
                                  },
                  "files":  [
                                "dist/**",
                                "node_modules/**",
                                "package.json",
                                "!node_modules/**/test/**",
                                "!node_modules/**/*.md"
                            ],
                  "protocols":  {
                                    "name":  "EasyGithub",
                                    "schemes":  [
                                                    "easygithub"
                                                ]
                                },
                  "win":  {
                              "target":  [
                                             {
                                                 "target":  "nsis",
                                                 "arch":  [
                                                              "x64"
                                                          ]
                                             }
                                         ]
                          },
                  "mac":  {
                              "target":  [
                                             "dmg",
                                             "zip"
                                         ]
                          },
                  "linux":  {
                                "target":  [
                                               "AppImage"
                                           ]
                            },
                  "nsis":  {
                               "oneClick":  false,
                               "perMachine":  false,
                               "allowElevation":  true,
                               "allowToChangeInstallationDirectory":  true,
                               "runAfterFinish":  false,
                               "createDesktopShortcut":  true,
                               "createStartMenuShortcut":  true,
                               "shortcutName":  "EasyGithub",
                               "uninstallDisplayName":  "EasyGithub 제거",
                               "deleteAppDataOnUninstall":  true
                           }
              },
    "dependencies":  {
                         "@emotion/react":  "11.14.0",
                         "@emotion/styled":  "11.14.1",
                         "@mui/icons-material":  "7.3.5",
                         "@mui/material":  "7.3.5",
                         "@octokit/rest":  "^22.0.0",
                         "@popperjs/core":  "2.11.8",
                         "@radix-ui/react-accordion":  "1.2.3",
                         "@radix-ui/react-alert-dialog":  "1.1.6",
                         "@radix-ui/react-aspect-ratio":  "1.1.2",
                         "@radix-ui/react-avatar":  "1.1.3",
                         "@radix-ui/react-checkbox":  "1.1.4",
                         "@radix-ui/react-collapsible":  "1.1.3",
                         "@radix-ui/react-context-menu":  "2.2.6",
                         "@radix-ui/react-dialog":  "1.1.6",
                         "@radix-ui/react-dropdown-menu":  "2.1.6",
                         "@radix-ui/react-hover-card":  "1.1.6",
                         "@radix-ui/react-label":  "2.1.2",
                         "@radix-ui/react-menubar":  "1.1.6",
                         "@radix-ui/react-navigation-menu":  "1.2.5",
                         "@radix-ui/react-popover":  "1.1.6",
                         "@radix-ui/react-progress":  "1.1.2",
                         "@radix-ui/react-radio-group":  "1.2.3",
                         "@radix-ui/react-scroll-area":  "1.2.3",
                         "@radix-ui/react-select":  "2.1.6",
                         "@radix-ui/react-separator":  "1.1.2",
                         "@radix-ui/react-slider":  "1.2.3",
                         "@radix-ui/react-slot":  "1.1.2",
                         "@radix-ui/react-switch":  "1.1.3",
                         "@radix-ui/react-tabs":  "1.1.3",
                         "@radix-ui/react-toggle-group":  "1.1.2",
                         "@radix-ui/react-toggle":  "1.1.2",
                         "@radix-ui/react-tooltip":  "1.1.8",
                         "class-variance-authority":  "0.7.1",
                         "clsx":  "2.1.1",
                         "cmdk":  "1.1.1",
                         "date-fns":  "3.6.0",
                         "electron-store":  "^10.1.0",
                         "electron-updater":  "^6.3.0",
                         "embla-carousel-react":  "8.6.0",
                         "input-otp":  "1.4.2",
                         "lucide-react":  "0.487.0",
                         "motion":  "12.23.24",
                         "next-themes":  "0.4.6",
                         "react":  "18.3.1",
                         "react-day-picker":  "8.10.1",
                         "react-dom":  "18.3.1",
                         "react-dnd":  "16.0.1",
                         "react-dnd-html5-backend":  "16.0.1",
                         "react-hook-form":  "7.55.0",
